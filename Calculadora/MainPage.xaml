<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculadora.MainPage"
             BackgroundColor="#1C1C1C">
    <Grid Padding="10" RowSpacing="5" ColumnSpacing="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Logo Image -->
        <Image Source="oym.jpg"
               Grid.Row="0"
               Grid.Column="0"
               Grid.ColumnSpan="4"
               HeightRequest="100"
               HorizontalOptions="Center"
               Margin="0,10,0,10"/>

        <!-- mi nombre -->
        <Label Text="Victor Quezada 23-eist-8-001" 
               Grid.Row="1" 
               Grid.Column="0" 
               Grid.ColumnSpan="4" 
               HorizontalOptions="Center" 
               TextColor="Blue" 
               FontSize="24" 
               FontAttributes="Bold" 
               Margin="0,10,0,20"/>

        <!-- Pantalla de resultados -->
        <Frame Grid.Row="2" 
               Grid.Column="0" 
               Grid.ColumnSpan="4" 
               BackgroundColor="#333333" 
               CornerRadius="10" 
               Padding="10" 
               Margin="0,0,0,10">
            <StackLayout>
                <Label x:Name="resultText" 
                       Text="0" 
                       FontSize="24" 
                       TextColor="White" 
                       HorizontalOptions="EndAndExpand"/>
                <Label x:Name="calculationText" 
                       Text="" 
                       FontSize="20"
                       TextColor="#AAAAAA" 
                       HorizontalOptions="EndAndExpand"/>
            </StackLayout>
        </Frame>

        <!-- Fila de operaciones -->
        <Button Text="÷" 
                Grid.Row="3" 
                Grid.Column="0" 
                BackgroundColor="#FF9500" 
                TextColor="White" 
                FontSize="24" 
                CornerRadius="25" 
                Clicked="OnOperatorClicked"/>
        <Button Text="×" 
                Grid.Row="3" 
                Grid.Column="1" 
                BackgroundColor="#FF9500" 
                TextColor="White" 
                FontSize="24" 
                CornerRadius="25" 
                Clicked="OnOperatorClicked"/>
        <Button Text="-" 
                Grid.Row="3" 
                Grid.Column="2" 
                BackgroundColor="#FF9500" 
                TextColor="White" 
                FontSize="24" 
                CornerRadius="25" 
                Clicked="OnOperatorClicked"/>
        <Button Text="+" 
                Grid.Row="3" 
                Grid.Column="3" 
                BackgroundColor="#FF9500" 
                TextColor="White" 
                FontSize="24" 
                CornerRadius="25" 
                Clicked="OnOperatorClicked"/>

        <!-- Números y otros botones -->
        <Button Text="7" 
                Grid.Row="4" 
                Grid.Column="0" 
                BackgroundColor="#505050" 
                TextColor="White" 
                FontSize="24" 
                CornerRadius="25" 
                Clicked="OnNumberClicked"/>
        <Button Text="8" 
                Grid.Row="4" 
                Grid.Column="1" 
                BackgroundColor="#505050" 
                TextColor="White" 
                FontSize="24" 
                CornerRadius="25" 
                Clicked="OnNumberClicked"/>
        <Button Text="9" 
                Grid.Row="4" 
                Grid.Column="2" 
                BackgroundColor="#505050" 
                TextColor="White" 
                FontSize="24" 
                CornerRadius="25" 
                Clicked="OnNumberClicked"/>
        <Button Text="%" 
                Grid.Row="4" 
                Grid.Column="3" 
                BackgroundColor="#A5A5A5" 
                TextColor="White" 
                FontSize="24" 
                CornerRadius="25" 
                Clicked="OnPercentClicked"/>

        <Button Text="4" 
                Grid.Row="5" 
                Grid.Column="0" 
                BackgroundColor="#505050" 
                TextColor="White" 
                FontSize="24" 
                CornerRadius="25" 
                Clicked="OnNumberClicked"/>
        <Button Text="5" 
                Grid.Row="5" 
                Grid.Column="1" 
                BackgroundColor="#505050" 
                TextColor="White" 
                FontSize="24" 
                CornerRadius="25" 
                Clicked="OnNumberClicked"/>
        <Button Text="6" 
                Grid.Row="5" 
                Grid.Column="2" 
                BackgroundColor="#505050" 
                TextColor="White" 
                FontSize="24" 
                CornerRadius="25" 
                Clicked="OnNumberClicked"/>

        <Button Text="1" 
                Grid.Row="6" 
                Grid.Column="0" 
                BackgroundColor="#505050" 
                TextColor="White" 
                FontSize="24" 
                CornerRadius="25" 
                Clicked="OnNumberClicked"/>
        <Button Text="2" 
                Grid.Row="6" 
                Grid.Column="1" 
                BackgroundColor="#505050" 
                TextColor="White" 
                FontSize="24" 
                CornerRadius="25" 
                Clicked="OnNumberClicked"/>
        <Button Text="3" 
                Grid.Row="6" 
                Grid.Column="2" 
                BackgroundColor="#505050" 
                TextColor="White" 
                FontSize="24" 
                CornerRadius="25" 
                Clicked="OnNumberClicked"/>

        <Button Text="0" 
                Grid.Row="7" 
                Grid.Column="0" 
                Grid.ColumnSpan="2" 
                BackgroundColor="#505050" 
                TextColor="White" 
                FontSize="24" 
                CornerRadius="25" 
                Clicked="OnNumberClicked"/>
        <Button Text="." 
                Grid.Row="7" 
                Grid.Column="2" 
                BackgroundColor="#505050" 
                TextColor="White" 
                FontSize="24" 
                CornerRadius="25" 
                Clicked="OnDecimalClicked"/>

        <!-- Botones especiales -->
        <Button Text="=" 
                Grid.Row="5" 
                Grid.Column="3" 
                Grid.RowSpan="2" 
                BackgroundColor="#FF9500" 
                TextColor="White" 
                FontSize="24" 
                CornerRadius="25" 
                Clicked="OnEqualsClicked"/>
        <Button Text="C" 
                Grid.Row="7" 
                Grid.Column="3" 
                BackgroundColor="#FF3B30" 
                TextColor="White" 
                FontSize="24" 
                CornerRadius="25" 
                Clicked="OnClearClicked"/>
    </Grid>
</ContentPage>